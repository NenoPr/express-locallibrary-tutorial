extends layout

block content

  h1 Delete Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    p There are #{genre_books.length} books using this genre.
    dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This genre has no books
    p Are you sure you want to delete this genre.
    form(method='POST' action='')
        div.form-group
        input#genreId.form-control(type='hidden',name='genreId', required='true', value=genre._id )
        button.btn.btn-primary(type='submit') Delete
    
